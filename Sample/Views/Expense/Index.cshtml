@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">


    <!-- jQuery (required for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Moment.js (Required for Daterangepicker) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <!-- Daterangepicker CSS & JS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.1/daterangepicker.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.1/daterangepicker.min.js"></script>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <!-- Select2 CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet">
    <!-- Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script> <!-- Notyf CSS -->
    <!-- Toastr -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>




    <!-- Custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/Expensestylesheet.css")" />
    <script src="~/Scripts/Modules/expenseJS.js"></script>



</head>

<body>

    <!-- Navbar (You can place your navbar here, but it's currently not present in the code) -->
    <!-- Example Navbar -->
    <input type="hidden" id="viewuser" value="@ViewBag.usersname" />
    <nav class="navbar navbar-expand-lg bgscolors navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#">My Expenses</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Date Filter -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="dateFilterDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="font-size:13px; font-weight: bold;">
                            <i class="fa fa-calendar-alt" style="color: #e0f7fa;"></i> <span id="filterText">Filter by</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dateFilterDropdown">
                            <li><a class="dropdown-item" href="#" onclick="applyFilter('date')">Date Filter</a></li>
                            <li><a class="dropdown-item" href="#" onclick="applyFilter('daterange')">Date Range Filter</a></li>
                            <li><a class="dropdown-item" href="#" onclick="applyFilter('month')">Month Filter</a></li>
                            <li><a class="dropdown-item" href="#" onclick="applyFilter('year')">Year Filter</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <input type="text" id="dateFilter" class="form-control" style="max-width: 180px; font-size: 13px; display: none;">
                    </li>

                    <!-- Add New Link -->
                    <li class="nav-item">
                        <a class="nav-link active text-white" style="font-size:13px;font-weight: bold;" href="#" onclick="AddNewExpense()">
                            <i class="fa fa-plus-square" title="Add New Expense"></i> Add Expense
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-white" style="font-size:13px;font-weight: bold;" href="#" onclick="ViewCategory()">
                            <i class="fa fa-eye" style="color:darkblue;" title="View Category"></i> View Category
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link active text-white dropdown-toggle" href="#" id="dropdownMenuButton2" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="font-size:13px;font-weight: bold;">
                            <i class="fa fa-file-export" style="color:#e0f7fa;" title="View Category"></i> Export
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton2">
                            <li><a class="dropdown-item" href="#" onclick="exportFile('CSV')">Export to CSV</a></li>
                            <li><a class="dropdown-item" href="#" onclick="exportFile('PDF')">Export to PDF</a></li>
                        </ul>
                    </li>
                    <li class="nav-item " id="dropdownMenuButton1" @(string.IsNullOrEmpty(ViewBag.usersname) ? "style='display:none; cursor:pointer;'" : "style='display:block'")>
                        <a class="nav-link active text-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="font-size:13px;font-weight: bold;">
                            <i class="fa fa-user" style="color:lightsteelblue;" title="User Details"></i>
                            @ViewBag.usersname
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                            <span class="dropdown-item" style="font-weight: bold;">@ViewBag.usersname</span>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Expense/Profile">Profile</a>
                            <a class="dropdown-item" href="/Expense/Logout">Logout</a>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="row mt-3 mobileView">
        <!-- Today's Spend Card -->
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-header">
                    <strong>Today's Spend</strong>
                </div>
                <div class="card-body">
                    <h5 class="card-title" id="todaySpentAmount">$0.00</h5>
                </div>
            </div>
        </div>

        <!-- Available Amount Card -->
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success">
                <div class="card-header">
                    <strong>Available Amount</strong>
                </div>
                <div class="card-body">
                    <h5 class="card-title" id="availableAmount">$120.00</h5>
                </div>
            </div>
        </div>

        <!-- Excess Amount Card -->
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger">
                <div class="card-header">
                    <strong>Excess Amount</strong>
                </div>
                <div class="card-body">
                    <h5 class="card-title" id="excessAmount">$0.00</h5>
                </div>
            </div>
        </div>

        <!-- Day Budget Amount Card -->
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-secondary">
                <div class="card-header">
                    <strong>Day Budget Amount</strong>
                </div>
                <div class="card-body">
                    <h5 class="card-title" id="dayBudgetAmount">$120.00</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- Table Container -->
    <div class="card card-primary1 card-outline1 card-tabs1 pt-3tt mb-2" style="padding: 0px 3px 0px 2px;">
        <section class="content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="box-body item-body">
                        <div id="divList" class="table-responsive scrollFixHeaderHorizontal">
                            <table id="expensetable" class="table table-striped table-bordered table-hover shimmerCss table-sm" style="width: 98%; font-size: 12px;">
                                <thead style="background-color: #3c8dbc; color: #fff;text-align:center;vertical-align:middle;" class="sticky-top">
                                    <tr style="font-size: 12px; text-align: center;">
                                        <th></th>
                                        <th>Category Name</th>
                                        <th>Description</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>AddedBy</th>
                                        <th>AddedOn</th>

                                    </tr>
                                </thead>
                                <tbody class="wrapper" id="tblBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>



    <div class="modal" id="expensemodal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #3c8dbc;color:#fff;">
                    <label class="modal-title"></label>
                    <button type="button" class="close closeExpenseBtn" aria-label="Close" data-modal="expensemodal">
                        <span aria-hidden="true" style="color:white;">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="category">Category</label>
                            <select class="form-control select2" id="category" placeholder="Please select"></select>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input type="text" class="form-control" id="description" placeholder="Please enter" />
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <label for="date">Date</label>
                            <input type="date" class="form-control" id="date" placeholder="Please select" />

                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input type="number" class="form-control" id="amount" placeholder="Please enter" />
                            <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success btn-sm" id="saveExpenseBtn" value="Save">Save</button>
                    <button type="button" class="btn btn-danger btn-sm closeExpenseBtn" data-modal="expensemodal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="expensecategory">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #3c8dbc; color: #fff; line-height: 1.5rem; display: flex; justify-content: space-between; align-items: center;">
                    <label class="modal-title-category" style="font-size: 16px; font-weight: bold;">Category</label>
                    <!-- Add Category link & Close Button (Grouped together) -->
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <!-- Add Category link -->
                        <a class="text-white"
                           style="font-size: 13px; font-weight: bold; text-decoration: none;"
                           id="newcategory" href="#" onclick="ViewCategory()">
                            <i class="fa fa-plus-square" title="View Category" style="font-size: 13px;"></i> Add Category
                        </a>
                        <!-- Close button -->
                        <button type="button" class="close closeExpenseBtn" aria-label="Close" data-modal="expensecategory">
                            <span aria-hidden="true" style="color:white; font-size: 20px;">&times;</span>
                        </button>
                    </div>
                </div>

                <div class="modal-body">
                    <!-- Category View Section -->
                    <div class="row" id="categoryview" style="display:none;">
                        <div class="col-sm-12">
                            <div class="box-body item-body">
                                <div id="divListcategory" class="table-responsive scrollFixHeaderHorizontal">
                                    <table id="categorytable" class="table table-striped table-bordered table-hover shimmerCss table-sm" style="width: 98%; font-size: 12px;">
                                        <thead style="background-color: #3c8dbc; color: #fff;text-align:center;vertical-align:middle;" class="sticky-top">
                                            <tr style="font-size: 12px; text-align: center;">
                                                <th></th>
                                                <th>Category Name</th>
                                                <th>Description</th>
                                                <th>AddedBy</th>
                                                <th>AddedOn</th>
                                            </tr>
                                        </thead>
                                        <tbody class="wrapper" id="tblBodycategory"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Add Category Section -->
                    <div class="row" id="showadd" style="display:none;">
                        <div class="mb-3">
                            <label for="newcategoryname" class="form-label">Category Name</label>
                            <input type="text" class="form-control" id="newcategoryname" placeholder="Category Name">
                        </div>
                        <div class="mb-3">
                            <label for="newdescription" class="form-label">Description</label>
                            <input type="text" class="form-control" id="newdescription" placeholder="Description">
                        </div>
                        <input type="hidden" id="editrowcategory" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success btn-sm" id="saveCategorybutton" value="Save">Save</button>
                    <button type="button" class="btn btn-danger btn-sm closeExpenseBtn" data-modal="expensecategory">Close</button>
                </div>
            </div>
        </div>
    </div>


    <div class="loader">
        <img src="@Url.Content("~/Content/Img/ajax-loader.gif")" />
    </div>
    <script>


        $(window).scroll(function () {
            if ($(document).scrollTop() > 100) {
                $('nav').addClass('animate');
            } else {
                $('nav').removeClass('animate');
            }
        });

        function closeOpenDropdowns(e) {
            let openDropdownEls = document.querySelectorAll("details.dropdown[open]");

            if (openDropdownEls.length > 0) {
                // If we're clicking anywhere but the summary element, close dropdowns
                if (e.target.parentElement.nodeName.toUpperCase() !== "SUMMARY") {
                    openDropdownEls.forEach((dropdown) => {
                        dropdown.removeAttribute("open");
                    });
                }
            }
        }

        document.addEventListener("click", closeOpenDropdowns);

       
    </script>
</body>
</html>
